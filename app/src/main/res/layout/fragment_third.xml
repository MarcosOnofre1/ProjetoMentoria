<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/text_third_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_third_page"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/cabin"
        android:text="@string/congratulations"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/img_third_page"
        android:layout_width="335dp"
        android:layout_height="335dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_congratulations" />

    <TextView
        android:id="@+id/text_third_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_third_page"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="@string/you_ve_reached_the_last_page"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>